# ============================================
# 数据库配置 (Malaysia Database)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=merchant_appeal
DB_CONNECTION_LIMIT=10

# ============================================
# 安全密钥 (部署前必须修改！)
# ============================================
# AES-256 加密密钥 (必须 64 位十六进制字符)
ENCRYPT_KEY=请替换为64位十六进制随机字符串
# JWT 签名密钥
JWT_SECRET=请替换为强随机字符串
# JWT 过期时间
JWT_EXPIRES_IN=24h

# ============================================
# 服务器配置
# ============================================
PORT=3001
NODE_ENV=production
CORS_ORIGINS=*

# ============================================
# 速率限制
# ============================================
RATE_LIMIT_MAX=100
CHAT_RATE_LIMIT_MAX=20

# ============================================
# 监控告警配置
# ============================================
# Webhook 通知地址（如企业微信/钉钉/飞书机器人）
MONITOR_WEBHOOK_URL=
# Webhook 签名密钥（可选）
MONITOR_WEBHOOK_SECRET=

# ============================================
# 数据备份配置
# ============================================
# 备份存储目录（默认 ./backups）
BACKUP_DIR=
# 最大备份文件数（默认30）
BACKUP_MAX_FILES=30
# 自动备份时间（小时，默认凌晨3点）
BACKUP_HOUR=3
# 是否启用自动备份（默认true，设为false禁用）
BACKUP_AUTO=true

# ============================================
# 支付配置 — 微信支付 v3
# ============================================
WECHAT_PAY_MCH_ID=
WECHAT_PAY_APP_ID=
WECHAT_PAY_API_V3_KEY=
WECHAT_PAY_SERIAL_NO=
WECHAT_PAY_PRIVATE_KEY_PATH=
WECHAT_PAY_CERT_PATH=
WECHAT_PAY_NOTIFY_URL=https://yourdomain.com/api/payment/wechat/notify

# ============================================
# 支付配置 — 支付宝
# ============================================
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=
ALIPAY_PUBLIC_KEY=
ALIPAY_NOTIFY_URL=https://yourdomain.com/api/payment/alipay/notify
ALIPAY_RETURN_URL=https://yourdomain.com/recharge-success

# ============================================
# 支付配置 — 易支付 (彩虹易支付/EasyPay)
# ============================================
# 易支付网关地址（如 https://pay.example.com）
EPAY_GATEWAY=
# 商户ID
EPAY_PID=
# 商户密钥
EPAY_KEY=
# 异步通知地址
EPAY_NOTIFY_URL=https://yourdomain.com/api/payment/epay/notify
# 同步返回地址
EPAY_RETURN_URL=https://yourdomain.com/api/payment/epay/return

# ============================================
# 支付配置 — 码支付 (VMQPAY/CodePay)
# ============================================
# 码支付网关地址
CODEPAY_GATEWAY=
# 商户ID
CODEPAY_ID=
# 通讯密钥
CODEPAY_KEY=
# 异步通知地址
CODEPAY_NOTIFY_URL=https://yourdomain.com/api/payment/codepay/notify
# 同步返回地址
CODEPAY_RETURN_URL=https://yourdomain.com/api/payment/codepay/return
